{
  "extends": "../../tsconfig.json",
  "exclude": ["node_modules"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "baseUrl": "src",
    "noEmit": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["*"],
      "@utils/*": ["utils/*"],
      "@styles/*": ["styles/*"],
      "@services/*": ["services/*"],
      "@fixtures/*": ["fixtures/*"],
      "@sections/*": ["sections/*"],
      "@layout": ["components/Layout"],
      "@components/*": ["components/*"]
    }
  }
}
